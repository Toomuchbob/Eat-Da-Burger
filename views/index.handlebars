<div class="container">
  <h1 class="text-center">Eat-A-Burger!</h1>

  <div class="row">
    <div class="col-4 p-1 bg-light">
      <h5 class="text-center">Add a Burger</h5>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add burger</button>
      </form>
    </div>
    <div class="col-4 p-1 bg-white">
      <h5 class="text-center">Burgers Not Devoured!</h5><br>

      <ul class="list-group m-2 p-2">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-4 p-1 bg-light">
      <h5 class="text-center">Burgers Devoured!</h5>

      <ul class="list-group m-2 p-2">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
</div>